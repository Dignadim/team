<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.dao.ItemDAO">

	<!-- id: sql 명령을 식별한다. -->
	<!-- parameterType: sql 명령으로 전달되는 데이터의 타입을 적는다. -->
	<!-- resultType: sql 명령 실행결과 리턴되는 데이터의 타입을 적는다. -->
	
	<!-- 댓글 1건을 저장한다. -->
	<insert id="insertItemComment" parameterType="item_co">
		insert into itemcomment (idx, gup, content, nickname, id) values (itemcomment_idx_seq.nextval, #{gup}, #{content}, #{nickname}, #{ID})
	</insert>
	
	<!-- 댓글 목록을 얻어온다. -->
	 <select id="selectItemCommentList" parameterType="int" resultType="item_co">
	 	select * from itemcomment where gup = #{idx} order by idx desc
	 </select>
	 
	 <!-- 댓글 1건을 수정한다. -->
	 <update id="updateItemComment" parameterType="item_co">
	 	update itemcomment set content=#{content} where idx = #{idx}
	 </update>
	 
	 <delete id="deleteItemComment" parameterType="int">
	 	delete from itemcomment where idx = #{idx}
	 </delete>
	 
</mapper>














